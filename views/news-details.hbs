<section class="news_area single-post-area p_100">
	<div class="container">
		<div class="row">
			<div class="col-lg-8">
				<div class="main_blog_details">
					<img class="img-fluid" src="/{{baiViet.AnhDaiDien}}" alt="" style="width:100%">
					<a href="/post/{{baiViet.IDBaiViet}}">
						<h4>{{baiViet.TieuDe}}</h4>
					</a>
					<div class="user_details">
						<div class="float-left">
							{{#each nhan}}
							<a href="/tag/{{tentag}}">{{tentag}}</a>
							{{/each}}
						</div>
						<div class="float-right">
							<div class="media">
								<div class="media-body">
									<h5>{{baiViet.nguoidang}}</h5>
									<p>{{format baiViet.NgayDang}}</p>
								</div>
								<div class="d-flex">
									<img src="/img/blog/user-img.jpg" alt="">
								</div>
							</div>
						</div>
					</div>
					<article class="result">
						{{{baiViet.NoiDung}}}
					</article>
