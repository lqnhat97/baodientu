      <!-- Breadcrumb-->
      <div class="breadcrumb-holder">
        <div class="container-fluid">
          <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
            <li class="breadcrumb-item active">Danh sách bài viết</li>
          </ul>
        </div>
      </div>
      <section>

        <div class="container-fluid">
          <!-- Page Header-->
          <header>
            <h1 class="h3 display">{{title}}</h1>
          </header>
          
          {{#if err_message}}
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            {{err_message}}
          </div>
          {{/if}}

          <div class="row">
            <div class="col-lg-12 col-sm-6">
              <div class="card">
                <div class="card-header">
                  <h4>Danh sách bài viết</h4>
                </div>
                {{#if rows}}
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-striped table-hover">
                      <thead>
                        <tr style="text-align:center">
                          <th>#</th>
                          <th>Tên Bài Viết</th>
                          <th>Chuyên Mục</th>
                          <th>Người viết</th>
                          <th>Thời gian viết</th>
                          <th>Tình trạng</th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#each rows}}
                        <tr>
                          <td>{{@index}}</td>
                          {{#ifCond XuatBan '==' 1}}
                          <td><a href="/post/{{IDBaiViet}}">{{TieuDe}}</a></td>
                          {{else}}
                          <td>{{TieuDe}}</td>
                          {{/ifCond}}
                          <td>{{TenChuyenMuc}}</td>
                          <td>{{PhongVien}}</td>
                          <td>{{format NgayViet}}</td>
                          {{#ifCond DaDuyet '==' XuatBan}}
                          <td style="color:blue">Đã đăng</td>
                          {{/ifCond}}
                          {{#ifCond DaDuyet '==' -1}}
                          <td style="color:red">Đã từ chối</td>
                          {{else}}
                          {{#ifCond XuatBan '==' 0}}
                          <td style="color:green">Chờ xuất bản</td>
                          {{/ifCond}}
                          {{/ifCond}}

                        </tr>
                        {{/each}}
                      </tbody>
                    </table>
                  </div>
                </div>
                {{else}}
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                  Không có bài viết chưa xử lý
                </div>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
      </section>