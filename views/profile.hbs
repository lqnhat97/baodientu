<form class="container margin-top-170 mb-5 bg-light rounded shadow-lg p-5" enctype="multipart/form-data" method="POST">
    <div class="form-group mt-4">
        <h2 class="text-uppercase text-center text-info">Thông tin tài khoản</h2>
    </div>
    <div class="row">
        <div class="col-sm-3 bg-dark text-center p-5">
            <div class="form-group">
                <div className='u-clickable image rounded-circle avatar'>
                    <label>
                        <input type="file" class="d-none" id="avatar"  name="file" onchange="readURL(this);">
                        <img src='/{{_user.passport.user.AnhDaiDien}}'
                        class="img-thumbnail rounded-circle"  />
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="text-light">
                    <h4 class="font-weight-light"></h4>
                </div>
            </div>
            <div class="form-group">
                <div class="text-light">
                    <i class="fa fa-envelope"></i>
                    {{_user.passport.user.Email}}
                </div>
            </div>
            <div class="form-group mt-5">
                <button type="button" class="btn btn-info btn-block" data-toggle="modal" data-target="#change-password">
                    Đổi mật khẩu
                </button>
                <div id="change-password" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title text-info" id="change-password">Đổi mật khẩu</h5>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <div class="modal-body">
                                <div class="form-group row">
                                    <label for="password-old" class="col-sm-4 col-form-label">Mật khẩu cũ</label>
                                    <div class="col-sm-8">
                                        <input type="password" name="password-old" class="form-control"
                                            placeholder="Nhập mật khẩu cũ" id="password-old">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="password-new" class="col-sm-4 col-form-label">Mật khẩu mới</label>
                                    <div class="col-sm-8">
                                        <input type="password" name="password-new" class="form-control"
                                            placeholder="Mật khẩu từ 8 đến 32 ký tự" id="password-new"
                                            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                                            title="Phải chứa ít nhất một số và một chữ hoa và chữ thường và ít nhất 8 ký tự trở lên">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="password-again" class="col-sm-4 col-form-label">Nhập lại</label>
                                    <div class="col-sm-8">
                                        <input type="password" name="password-again" class="form-control"
                                            placeholder="Nhập lại mật khẩu mới" id="password-again">
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-info btn-block" data-dismiss="modal">Cập
                                    nhật</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-9 bg-white p-5">
            <div class="form-group row">
                <label for="txtname" class="col-sm-3 col-form-label">Họ tên</label>
                <div class="col-sm-9">
                    <input type="text" name="name" class="form-control" placeholder="Nhập họ tên" id="txtname"
                        value='{{_user.passport.user.HoTen}}'>
                </div>
            </div>
            <div class="form-group row">
                <label for="sex-male" class="col-sm-3 col-form-label">Giới tính</label>
                <div class="col-sm-9 mt-2">
                    <div class="form-check form-check-inline">
                        <input type="radio" name="sex" id="sex-male" value="Nam">
                        <label for="inlineRadio1">Nam</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="radio" name="sex" id="sex-female" value="Nữ">
                        <label for="inlineRadio2">Nữ</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="radio" name="sex" id="sex-other" value="Khác">
                        <label for="inlineRadio2">Khác</label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label for="date" class="col-sm-3 col-form-label">Ngày sinh</label>
                <div class="col-sm-9">
                    <input type="date" name="birth" id="birth" class="form-control" id="date" value="{{formatDate1 _user.passport.user.NgaySinh}}">
                </div>
            </div>
            <div class="form-group row">
                <label for="email" class="col-sm-3 col-form-label">Email</label>
                <div class="col-sm-9">
                    <input type="email" name="email" class="form-control" placeholder="Nhập email" id="email"
                        value='{{_user.passport.user.Email}}'>
                </div>
            </div>
            <div class="form-group row">
                <label for="number-phone" class="col-sm-3 col-form-label">Số điện thoại</label>
                <div class="col-sm-9">
                    <input type="text" name="phone" class="form-control" id="number-phone" value='{{_user.passport.user.SDT}}'>
                </div>
            </div>
            <div class="form-group row">
                <label for="type-reader" class="col-sm-3 col-form-label">Phân hệ: </label>
                <div class="col-sm-9">
                    {{_user.passport.user.TenPhanHe}}
                </div>
            </div>
            <div class="form-group row">
                <label for="username" class="col-sm-3 col-form-label">Tên đăng nhập</label>
                <div class="col-sm-9">
                    <input type="text" name="username" class="form-control" id="username" value='{{_user.passport.user.UserName}}'>
                </div>
            </div>
            <div class="form-group mt-5">
                <button type="submit" class="btn btn-info btn-block">
                    Cập nhật
                </button>
            </div>
        </div>
    </div>
</form>
<script>
    window.onload = function() {
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    }
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#blah')
                    .attr('src', e.target.result)
                    .width(150)
                    .height(200);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>